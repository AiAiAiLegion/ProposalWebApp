@page "/"
@namespace ProposalWebApp.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <base href="/" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Заявки</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />

    <!-- Blazorise CSS -->
    <link href="/_content/Blazorise/blazorise.css" rel="stylesheet" />
    <link href="/_content/Blazorise.Bootstrap/blazorise.bootstrap.css" rel="stylesheet" />
    <link href="/_content/Blazorise.Icons.FontAwesome/v6/css/all.min.css" rel="stylesheet" />

    <link href="css/app.css?v=@DateTime.Now.Ticks" rel="stylesheet" />
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            Произошла ошибка. Это приложение может больше не работать.
        </environment>
        <environment include="Development">
            Произошла необработанная ошибка. Смотри консоль браузера для деталей.
        </environment>
        <a href="" class="reload">Перезагрузить</a>
        <a class="dismiss">Закрыть</a>
    </div>

    <!-- Blazor -->
    <script src="/_framework/blazor.server.js"></script>

    <!-- Blazorise -->
    <script src="~/lib/datagrid.js"></script>

</body>
</html>
